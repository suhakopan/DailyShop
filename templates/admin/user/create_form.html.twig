{% extends 'admin/adminbase.html.twig' %}
{% block m22 %}<li class="active">{% endblock %}
{% block title %}Daily Shop | Üye Ekle{% endblock %}
{% block brand %}Üye Ekle{% endblock %}
{% block body %}

    <div class="box box-info">
        <form method="post" name="user" >
            <h4>Kişisel Bilgiler</h4>
            <div class="box-body">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                    <input type="email" name="user[EMail]" value="" class="form-control" id="inputEmail" placeholder="E-posta">
                </div>
                <br>
                <div class="input-group">
                    <input type="password" name="user[Password]"  value="" class="form-control" id="inputName" placeholder="Şifre">
                    <span class="input-group-addon"></span>
                </div>
                <br>
                <div class="input-group">
                    <input type="text" name="user[Name]"  value="" class="form-control" id="inputName" placeholder="Adı Soyadı">
                    <span class="input-group-addon"></span>
                </div>
                <br>
                <h4>Adres</h4>
                <div class="input-group">
                    <textarea class="form-control" name="user[Address]" rows="3" placeholder="Adresi giriniz..." id="inputAdress"></textarea>
                    <span class="input-group-addon"></span>
                </div>
                <h4>Telefon Numarası</h4>
                <br>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                    <input type="text" name="user[Phone]"  value="" class="form-control"  id="inputPhone"  placeholder="05554443322">
                </div>
                <br>
                <div class="input-group">
                    <input type="text" name="user[City]" value=""  class="form-control" id="inputName" placeholder="Şehir">
                    <span class="input-group-addon"></span>
                </div>
                <br>
                <input type="hidden" name="token" value="{{ csrf_token('user-editing') }}"/>
                <input type="hidden" name="user[Roles]" value="ROLE_USER"/>
                <input type="hidden" name="user[Status]" value="true"/>

                <!-- /input-group -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-info">KAYDET</button>
                    <button type="submit" class="btn btn-default">İPTAL</button>
                </div>
            </div>
            <!-- /.box-body -->
        </form>
        <!-- /.box-body -->
    </div>
{% endblock %}
