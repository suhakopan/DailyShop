{% extends 'admin/adminbase.html.twig' %}
{% block title %}Daily Shop | Ürün Resimleri{% endblock %}
{% block brand %}Ürün Resimleri{% endblock %}
{% block m4 %}<li class="active">{% endblock %}
    {% block body %}

    <h4>Ürün Resimleri</h4>
    <div class="table-responsive ">
        <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>ProductNo</th>
                <th>ImageSource</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td>{{ image.id }}</td>
                <td>{{ image.ProductNo }}</td>
                <td><img src="{{ asset('uploads') }}/images/{{ image.ImageSource }}"></td>
                <td>
                    <a href="{{ path('admin_image_show', {'id': image.id}) }}">show</a>
                    <a href="{{ path('admin_image_edit', {'id': image.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_image_new') }}">Create new</a>
{% endblock %}
