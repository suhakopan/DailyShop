{% extends 'frontbase.html.twig' %}

{% block title %}dailyShop | Üye Ol{%  endblock %}
{% block body %}
    <div class="container">
    <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}

    {% else %}

        <form method="post" name="user" action="{{ path('new_user') }}">
            <div class="box box-info">
                {{ include('admin/messages.html.twig') }}
                {% block mesaj %} {% endblock %}
                <h4>Kişisel Bilgiler</h4>
                <div class="box-body">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                        <input type="email" name="users[EMail]" class="form-control" id="inputEmail" placeholder="E-posta">
                    </div>
                    <br>
                    <div class="input-group">
                        <input type="text" name="users[Name]"  class="form-control" id="inputName" placeholder="Adı Soyadı">
                        <span class="input-group-addon"></span>
                    </div>
                    <br>
                    <h4>Parola oluşturun</h4>
                    <div class="input-group">
                        <input type="password" name="users[Password]" class="form-control" id="inputPassword" placeholder="Şifre">
                        <span class="input-group-addon"></span>
                    </div>
                    <br>
                    <h4>Adres</h4>
                    <div class="input-group">
                        <textarea class="form-control" name="users[Address]"  rows="3" placeholder="Adresi giriniz..." id="inputAdress"></textarea>
                        <span class="input-group-addon"></span>
                    </div>
                    <h4>Telefon Numarası</h4>
                    <br>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                        <input type="text" name="users[Phone]"  class="form-control"  id="inputPhone"  placeholder="05554443322">
                    </div>
                    <br>
                    <div class="input-group">
                        <input type="text" name="users[City]"  class="form-control" id="inputName" placeholder="Şehir">
                        <span class="input-group-addon"></span>
                    </div>
                    <br>
                    <input type="hidden" name="token" value="{{ csrf_token('register-auth') }}"/>
                    <input type="hidden" name="users[Roles]" value="ROLE_USER"/>
                    <input type="hidden" name="users[Status]" value="true"/>

                    <!-- /input-group -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-info">KAYDET</button>
                        <button type="submit" class="btn btn-default">İPTAL</button>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
        </form>
        </div>
        </div>
        </div>
    {% endif %}

{%  endblock %}



