{% extends 'frontbase.html.twig' %}

{% block title %}Daily Shop | Siparişlerim{% endblock %}

{% block body %}
    <section id="cart-view">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    {{ include ('home/_usersidebar.html.twig') }}
                </div>
                <div class="col-md-9">
                    <div class="cart-view-area">
                        <div class="cart-view-table">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Sipariş Numarası</th>
                                    <th>Sipariş Tutarı</th>
                                    <th>Sipariş Tarihi</th>
                                    <th>Ödeme Tipi</th>
                                    <th>Detaylar</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for order in orders %}
                                    <tr>
                                        <td>#{{ order.id }}</td>
                                        <td>{{ order.Total }}₺</td>
                                        <td>{{ order.CreatedAt|date("d/m/Y") }}</td>
                                        <td>{{ order.PaymentType }}</td>
                                        <td> <a href="{{ path('orders_show',{'id': order.id}) }}" rel="tooltip" title="Göster" class="btn btn-info btn-simple btn-xs">
                                                <i class="fa fa-check-circle"></i>  Görüntüle</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="8">Hiç siparişiniz yok</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
