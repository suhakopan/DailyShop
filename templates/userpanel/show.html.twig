<div class="col-md-9">
    <div class="cart-view-area">
        <div class="cart-view-table">
            {{ include ('admin/messages.html.twig') }}
            <form method="post" name="user" action="{{ path('userpanel_edit') }}">
                <h4>Kişisel Bilgiler</h4>
                <div class="box-body">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                        <input type="email" name="email" value="{{ app.user.email }}" class="form-control" id="inputEmail" placeholder="E-posta" readonly>
                    </div>
                    <br>
                    <div class="input-group">
                        <input type="text" name="name"  value="{{ app.user.name }}" class="form-control" id="inputName" placeholder="Adı Soyadı">
                        <span class="input-group-addon"></span>
                    </div>
                    <br>
                    <h4>Adres</h4>
                    <div class="input-group">
                        <textarea class="form-control" name="address" rows="3" placeholder="Adresi giriniz..." id="inputAdress">{{ app.user.address }}</textarea>
                        <span class="input-group-addon"></span>
                    </div>
                    <h4>Telefon Numarası</h4>
                    <br>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                        <input type="text" name="phone"  value="{{ app.user.phone }}" class="form-control"  id="inputPhone"  placeholder="05554443322">
                    </div>
                    <br>
                    <div class="input-group">
                        <input type="text" name="city" value="{{ app.user.city }}"  class="form-control" id="inputName" placeholder="Şehir">
                        <span class="input-group-addon"></span>
                    </div>
                    <br>
                    <input type="hidden" name="token" value="{{ csrf_token('user-editing') }}"/>
                    <!-- <input type="hidden" name="users[Roles]" value="ROLE_USER"/>
                     <input type="hidden" name="users[Status]" value="true"/> -->

                    <!-- /input-group -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-info">KAYDET</button>
                        <button type="submit" class="btn btn-default">İPTAL</button>
                    </div>
                </div>
                <!-- /.box-body -->
            </form>
        </div>
    </div>
</div>






