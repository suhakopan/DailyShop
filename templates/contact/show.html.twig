{% extends 'admin/adminbase.html.twig' %}
{% block m8 %}<li class="active">{% endblock %}
{% block title %}Daily Shop | Mesajlar{% endblock %}
{% block brand %}Mesajlar{% endblock %}
{% block body %}
    <div class="table-responsive ">
        <table class="table table-hover table-striped">
            <thead>
            <th>ID</th>
            <th>Adı Soyadı</th>
            <th>E-Posta</th>
            <th>Konu</th>
            <th>Şirket</th>
            <th>Mesaj</th>
            </thead>
            <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>{{ contact.id }}</td>
                    <td>{{ contact.Name }}</td>
                    <td>{{ contact.Email }}</td>
                    <td>{{ contact.Subject }}</td>
                    <td>{{ contact.Company }}</td>
                    <td>{{ contact.Message }}</td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>
{% endblock %}
